<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/intent_fragment_recycler_item2_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/intent_fragment_recycler_shopName"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="茶话弄 ＞"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/intent_fragment_recycler_item2_imageView"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/intent_fragment_recycler_situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/intent_fragment_recycler_item2_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intent_fragment_recycler_item2_imageView"/>

    <Button
        android:id="@+id/intent_fragment_recycler_item2_pieceSum"
        android:layout_width="80dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/intent_fragment_recycler_item2_imageView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:background="#9bFDFDFA"
        android:text="￥34"/>

    <Button
        android:id="@+id/intent_fragment_recycler_item2_again"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="再来一单"
        android:background="@drawable/background4"
        app:layout_constraintTop_toBottomOf="@id/intent_fragment_recycler_item2_pieceSum"/>

</androidx.constraintlayout.widget.ConstraintLayout>