<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/background1"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/myFragment_item_imageView"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:src="@drawable/img_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/myFragment_item_shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myFragment_item_imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="兰湘子·湘菜小炒"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/myFragment_item_score"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myFragment_item_shopName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="5.0分"
        android:textSize="15sp"
        android:textColor="#f9a633"/>

    <TextView
        android:id="@+id/myFragment_item_hhh"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/myFragment_item_shopName"
        app:layout_constraintStart_toEndOf="@id/myFragment_item_score"
        android:text="月售1000+ 人均￥26"
        android:textSize="10sp" />


</androidx.constraintlayout.widget.ConstraintLayout>