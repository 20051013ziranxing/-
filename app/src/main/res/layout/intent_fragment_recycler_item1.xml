<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/intent_fragment_re1_ImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_12"/>

    <TextView
        android:id="@+id/intent_fragment_re1_shopName"
        android:layout_width="70dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/intent_fragment_re1_ImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:text="茶话弄"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/intent_fragment_re1_countLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="买过"
        app:layout_constraintTop_toBottomOf="@id/intent_fragment_re1_shopName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/intent_fragment_re1_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="9"
        android:textColor="#EDE86B27"
        app:layout_constraintTop_toBottomOf="@id/intent_fragment_re1_shopName"
        app:layout_constraintStart_toEndOf="@id/intent_fragment_re1_countLeft"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="次"
        app:layout_constraintTop_toBottomOf="@id/intent_fragment_re1_shopName"
        app:layout_constraintStart_toEndOf="@id/intent_fragment_re1_count"/>



</androidx.constraintlayout.widget.ConstraintLayout>