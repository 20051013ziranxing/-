<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_mealPicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img_31"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView_mealName"
        android:text="西红柿炒鸡蛋"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_mealPicture"/>

    <TextView
        android:id="@+id/textView_mealCount"
        android:text="月售200+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_mealName"
        app:layout_constraintStart_toEndOf="@id/imageView_mealPicture"/>

    <TextView
        android:id="@+id/textView_mealPricePoint"
        android:text="￥"
        android:textSize="15sp"
        android:textColor="#E43434"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imageView_mealPicture"
        app:layout_constraintStart_toEndOf="@id/imageView_mealPicture"/>

    <TextView
        android:id="@+id/textView_mealPrice"
        android:text="18  "
        android:textSize="20sp"
        android:textColor="#E43434"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imageView_mealPicture"
        app:layout_constraintStart_toEndOf="@id/textView_mealPricePoint"/>

    <ImageButton
        android:id="@+id/imageButton_mealAddMeal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_32"
        android:background="#00ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textView_mealPrice"/>

    <TextView
        android:id="@+id/textView_mealCountBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/imageButton_mealAddMeal"
        android:text="0"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/textView_mealPrice"/>

    <ImageButton
        android:id="@+id/imageButton_mealDeleteMeal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_33"
        android:background="#00ffffff"
        app:layout_constraintEnd_toStartOf="@id/textView_mealCountBuy"
        app:layout_constraintBottom_toBottomOf="@id/textView_mealPrice"/>

</androidx.constraintlayout.widget.ConstraintLayout>