<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_margin="8dp"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/home_item_imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/img_10"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_marginStart="5dp"
        android:id="@+id/dian_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兰湘子·湘菜小炒"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_item_imageView"
        android:textSize="20sp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_11"
        android:background="#00ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/home_item_score"
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dian_name"
        app:layout_constraintStart_toEndOf="@id/home_item_imageView"
        android:text="5.0分"
        android:textSize="15sp"
        android:textColor="#f9a633"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="月售2000＋"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@id/home_item_score"
        app:layout_constraintTop_toBottomOf="@id/dian_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/home_item_imageView"
        app:layout_constraintTop_toBottomOf="@id/home_item_score"
        android:text="起送 ￥20  配送 约￥1.4"
        android:layout_marginStart="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>